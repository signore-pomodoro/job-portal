  
<div class="container" style="text-align:center;">
  <div class="row">
    <div class="col order-first">
    <li><%= link_to 'Домой', root_path %></li>
    </div>

    <div class="col">
    <% if employer_signed_in? %>
      <li><%= link_to 'Выйти', destroy_employer_session_path,
              method: :delete %></li>
    <% else %>
       <% unless applicant_signed_in? %>
      <li><%= link_to 'Войти как работодатель', new_employer_session_path %></li>
      <li><%= link_to 'Регистрация работодателя',
              new_employer_registration_path %></li> 
      <% end %>             
    <% end %>
    </div>

    <div class="col order-last">
    
    <% if applicant_signed_in? %>
      <li><%= link_to 'Выйти', destroy_applicant_session_path,
              method: :delete %></li>
    <% else %>
      <% if not employer_signed_in? %> 
      <li><%= link_to 'Войти как соискатель', new_applicant_session_path %></li>

      <li><%= link_to 'Регистрация соискателя',
              new_applicant_registration_path %></li>
       <% end %>      
    <% end %>
    </div>
  </div>      
</div>

  <div style="text-align:center;">
  <%= link_to 'Создать вакансию', new_job_path, class: 'btn btn-warning .btn-lg' %>
  <%= link_to 'Купить премиум', checkout_path, class: 'btn btn-light .btn-lg' %>
  </div>
